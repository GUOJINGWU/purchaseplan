$(function() {
	layui.use([ 'form' ], function() {
		var form = layui.form();
		form.on('radio(plan-type)', function(data) {
			if(data.value == 2){
				console.log(data.value);
				$('.emergency-item').show();
				form.render();
			}else if(data.value == 1){
				console.log(data.value);
				$('.emergency-item').hide();
				form.render();
			}
		});
	});
});

